<!-- modal -->

<div id='present-modal' class="modal full-screen fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class='row'>
          <div class='col-xs-12'>
            <div class="gfyitem" data-title=true data-autoplay=true data-controls=true data-expand=false data-id="{{present}}" ></div> 
          </div>
        </div>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
